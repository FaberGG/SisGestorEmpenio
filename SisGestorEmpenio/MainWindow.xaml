<Window
    x:Class="SisGestorEmpenio.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SisGestorEmpenio"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Gestor de Empeños"
    Width="1200"
    Height="800"
    Background="#3A7575"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">

    <Window.Resources>
        <!--  Estilo para los botones del sub-menú  -->
        <Style x:Key="SubMenuButtonStyle" TargetType="Border">
            <Setter Property="Width" Value="230" />
            <Setter Property="Height" Value="28" />
            <Setter Property="Margin" Value="0,6,0,0" />
            <Setter Property="Padding" Value="5,0" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Background" Value="Transparent" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <!--  Cambiar el color del texto a blanco en hover  -->
                    <Setter Property="Tag" Value="Hover" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  Estilo para el TextBlock dentro del sub-menú  -->
        <Style x:Key="SubMenuTextStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="3,0,0,0" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="DemiBold" />
            <Setter Property="Foreground" Value="#83C4C4" />
            <Style.Triggers>
                <!--  Trigger que responde cuando el Border padre tiene hover  -->
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=IsMouseOver}" Value="True">
                    <Setter Property="Foreground" Value="White" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>




    <Grid>
        <!--  Columnas: Menú lateral | Contenido principal  -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="278" />
            <!--  Ancho del menú  -->
            <ColumnDefinition Width="*" />
            <!--  Resto para el contenido  -->
        </Grid.ColumnDefinitions>



        <!--  Menú lateral permanente  -->


        <StackPanel Width="278" Background="#3A7575">
            <!--  Primer sub-contenedor  -->
            <Border
                Width="220"
                Height="50"
                Margin="0,25,0,0"
                HorizontalAlignment="Center"
                Background="Transparent">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50" />
                        <!--  Icono  -->
                        <ColumnDefinition Width="*" />
                        <!--  Textos  -->
                        <ColumnDefinition Width="Auto" />
                        <!--  Botón a la derecha  -->
                    </Grid.ColumnDefinitions>

                    <!--  Div con fondo  -->
                    <Border
                        Grid.Column="0"
                        Width="50"
                        Height="50"
                        Background="#83C4C4"
                        CornerRadius="11" />

                    <!--  Textos  -->
                    <StackPanel
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        Orientation="Vertical">
                        <TextBlock
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="Administrador" />
                        <TextBlock
                            Cursor="Hand"
                            FontSize="12"
                            Foreground="#83C4C4"
                            MouseLeftButtonDown="CerrarSesion_Click"
                            Text="Cerrar sesión" />
                    </StackPanel>

                    <!--  Div a la derecha  -->
                    <Border
                        Grid.Column="2"
                        Width="24"
                        Height="24"
                        Padding="0,3,0,0"
                        HorizontalAlignment="Right"
                        Background="Transparent" />
                </Grid>

            </Border>

            <!--  Segundo sub-contenedor  -->
            <StackPanel
                Width="230"
                Margin="0,39,0,0"
                HorizontalAlignment="Center">
                <!--  Aquí irá el contenido del menú  -->

                <!--  Texto superior  -->
                <TextBlock
                    Padding="5,0,0,0"
                    FontSize="12"
                    FontWeight="DemiBold"
                    Foreground="#83C4C4"
                    Text="Gestion de la casa de empeño" />



                <!--  DESPLEGABLE PARA PRESTAMOS  -->
                <!--  "Botón" principal con estilo de Border  -->
                <Border
                    x:Name="PrestamoBotonPrincipal"
                    Width="230"
                    Height="28"
                    Margin="0,12,0,0"
                    Padding="5,0"
                    Background="#448686"
                    CornerRadius="8"
                    Cursor="Hand"
                    MouseEnter="PrestamoBotonPrincipal_MouseEnter"
                    MouseLeave="PrestamoBotonPrincipal_MouseLeave"
                    MouseLeftButtonUp="ToggleGestPrestamo_Click">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  Icono izquierdo  -->
                        <Border
                            Grid.Column="0"
                            Width="20"
                            Height="20"
                            VerticalAlignment="Center"
                            Background="Transparent">
                            <Path
                                Width="20"
                                Height="20"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Data="M744-377.23v-272L532-802.08 320-648.93v107.39h-32v-122.92l244-177.39 244 176.39v288.23h-32ZM532-802.08Zm21.85 183.77h28.3v-28.31h-28.3v28.31Zm-72 0h28.3v-28.31h-28.3v28.31Zm72 72h28.3v-28.31h-28.3v28.31Zm-72 0h28.3v-28.31h-28.3v28.31Zm-217.7 324.46 288.62 93.31 236.54-72q-4.16-30.23-22.78-43.77-18.62-13.54-42.15-13.54H525.6q-15.37 0-36.98-2.5-21.62-2.5-42.24-10.03l-62.61-23.7 13.54-30.54 70 28.31q13.31 6.31 25.34 6.77 12.04.46 20.73-.31h92q0-17.69-5.38-26.23t-19.23-14.07l-252.15-90.47q-2.31-.76-4.24-1.15-1.92-.38-4.23-.38h-56v200.3Zm-160 85.85v-318.15h213.1q6.6 0 12.52 1.26 5.92 1.27 11.55 3.08l252.6 89.58q18.46 7.15 30.96 24.56 12.5 17.4 12.5 45.82h87q46.58 0 73.1 31.62Q824-226.62 824-185.85v8.62L553.77-95.08l-289.62-91.77V-136h-160Zm32-32h96v-254.15h-96V-168Z"
                                Fill="White"
                                Stretch="Uniform" />
                        </Border>

                        <!--  Texto  -->
                        <TextBlock
                            Grid.Column="1"
                            Margin="7,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="12"
                            FontWeight="DemiBold"
                            Foreground="White"
                            Text="Gestión de préstamos" />

                        <!--  Icono derecho  -->
                        <Border
                            Grid.Column="2"
                            Width="22"
                            Height="22"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Background="Transparent">
                            <Image
                                x:Name="PrestamoIconoFlecha"
                                Width="22"
                                Height="22"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Source="pack://application:,,,/SisGestorEmpenio;component/resources/chevron_right_22.png">
                                <Image.RenderTransform>
                                    <RotateTransform x:Name="PrestamoFlechaTransform" Angle="-90" CenterX="11" CenterY="11" />
                                </Image.RenderTransform>
                            </Image>
                        </Border>
                    </Grid>
                </Border>

                <!--  Contenedor oculto de sub-opciones  -->
                <StackPanel x:Name="OpcionesPrestamos" Visibility="Visible">
                    <!--  Sub-opciones con mismo estilo  -->


                    <!--  REGISTRAR PRESTAMO  -->
                    <Border
                        x:Name="BtnRegistrarPrestamo"
                        MouseLeftButtonUp="GoToRegistrarPrestamo"
                        Style="{StaticResource SubMenuButtonStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border
                                Grid.Column="0"
                                Width="24"
                                Height="24"
                                VerticalAlignment="Center"
                                Background="Transparent" />
                            <TextBlock
                                x:Name="TxtRegistrarPrestamo"
                                Grid.Column="1"
                                Style="{StaticResource SubMenuTextStyle}"
                                Text="Registra un préstamo" />
                        </Grid>
                    </Border>


                    <!--  MODIFICAR PRESTAMO  -->
                    <Border MouseLeftButtonUp="GoToModificarPrestamo" Style="{StaticResource SubMenuButtonStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border
                                Grid.Column="0"
                                Width="24"
                                Height="24"
                                VerticalAlignment="Center"
                                Background="Transparent" />
                            <TextBlock
                                x:Name="TxtModificarPrestamo"
                                Grid.Column="1"
                                Style="{StaticResource SubMenuTextStyle}"
                                Text="Modifica un préstamo" />
                        </Grid>
                    </Border>

                    <!--  CONSULTA UN PRÉSTAMO  -->
                    <Border
                        x:Name="BdConsultaPrestamo"
                        MouseLeftButtonUp="GoToConsultarPrestamo"
                        Style="{StaticResource SubMenuButtonStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border
                                Grid.Column="0"
                                Width="24"
                                Height="24"
                                VerticalAlignment="Center"
                                Background="Transparent" />
                            <TextBlock
                                x:Name="TxtConsultarPrestamo"
                                Grid.Column="1"
                                Style="{StaticResource SubMenuTextStyle}"
                                Text="Consulta un préstamo" />
                        </Grid>
                    </Border>





                </StackPanel>


                <!--  "Botón" principal con estilo de Border  -->
                <Border
                    x:Name="DevolucionBotonPrincipal"
                    Width="230"
                    Height="28"
                    Margin="0,12,0,0"
                    Padding="5,0"
                    CornerRadius="8"
                    Cursor="Hand"
                    MouseEnter="DevolucionBotonPrincipal_MouseEnter"
                    MouseLeave="DevolucionBotonPrincipal_MouseLeave"
                    MouseLeftButtonUp="ToggleGestDevolucion_Click">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  Icono izquierdo  -->
                        <Border
                            Grid.Column="0"
                            Width="18"
                            Height="18"
                            VerticalAlignment="Center"
                            Background="Transparent">
                            <Path
                                Width="18"
                                Height="18"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Data="M361.69-232q-61.54 0-103.69-47.54t-42.15-111.38q0-63.85 42.15-111 42.15-47.16 103.69-47.16h303.69L557.77-656.69 581.08-680 728-533.08 581.08-386.15l-23.31-23.31 107.61-107.62H361.69q-49.23 0-81.54 37.31-32.3 37.31-32.3 88.85 0 51.54 32.3 89.23Q312.46-264 361.69-264h294.16v32H361.69Z"
                                Fill="White"
                                Stretch="Uniform" />
                        </Border>

                        <!--  Texto  -->
                        <TextBlock
                            Grid.Column="1"
                            Margin="7,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="12"
                            FontWeight="DemiBold"
                            Foreground="White"
                            Text="Gestión de devoluciones" />

                        <!--  Icono derecho  -->
                        <Border
                            Grid.Column="2"
                            Width="22"
                            Height="22"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Background="Transparent">
                            <Image
                                x:Name="DevolucionIconoFlecha"
                                Width="22"
                                Height="22"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Source="pack://application:,,,/SisGestorEmpenio;component/resources/chevron_right_22.png">
                                <Image.RenderTransform>
                                    <RotateTransform x:Name="DevolucionFlechaTransform" Angle="90" CenterX="11" CenterY="11" />
                                </Image.RenderTransform>
                            </Image>
                        </Border>
                    </Grid>
                </Border>

                <!--  Contenedor oculto de sub-opciones  -->
                <StackPanel x:Name="OpcionesDevoluciones" Visibility="Collapsed">
                    <!--  Sub-opciones con mismo estilo  -->


                    <!--  REGISTRAR DEVOLUCIÓN  -->
                    <Border
                        x:Name="BtnRegistrarDevolucion"
                        MouseLeftButtonUp="GoToRegistrarDevolucion"
                        Style="{StaticResource SubMenuButtonStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border
                                Grid.Column="0"
                                Width="24"
                                Height="24"
                                VerticalAlignment="Center"
                                Background="Transparent" />
                            <TextBlock
                                x:Name="TxtRegistrarDevolucion"
                                Grid.Column="1"
                                Style="{StaticResource SubMenuTextStyle}"
                                Text="Registra una devolución" />
                        </Grid>
                    </Border>

                    <!--  MODIFICAR DEVOLUCIÓN  -->
                    <Border
                        x:Name="BtnModificarDevolucion"
                        MouseLeftButtonUp="GoToModificarDevolucion"
                        Style="{StaticResource SubMenuButtonStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border
                                Grid.Column="0"
                                Width="24"
                                Height="24"
                                VerticalAlignment="Center"
                                Background="Transparent" />
                            <TextBlock
                                x:Name="TxtModificarDevolucion"
                                Grid.Column="1"
                                Style="{StaticResource SubMenuTextStyle}"
                                Text="Modifica una devolución" />
                        </Grid>
                    </Border>

                    <!--  CONSULTAR DEVOLUCIÓN  -->
                    <Border
                        x:Name="BtnConsultarDevolucion"
                        MouseLeftButtonUp="GoToConsultarDevolucion"
                        Style="{StaticResource SubMenuButtonStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border
                                Grid.Column="0"
                                Width="24"
                                Height="24"
                                VerticalAlignment="Center"
                                Background="Transparent" />
                            <TextBlock
                                x:Name="TxtConsultarDevolucion"
                                Grid.Column="1"
                                Style="{StaticResource SubMenuTextStyle}"
                                Text="Consulta una devolución" />
                        </Grid>
                    </Border>

                </StackPanel>




                <!--  GESTION INVENTARIO - ARTICULOS  -->
                <!--  "Botón" principal con estilo de Border  -->



                <!--  "Botón" principal con estilo de Border  -->
                <Border
                    x:Name="ArticuloBotonPrincipal"
                    Width="230"
                    Height="28"
                    Margin="0,12,0,0"
                    Padding="5,0"
                    CornerRadius="8"
                    Cursor="Hand"
                    MouseEnter="ArticuloBotonPrincipal_MouseEnter"
                    MouseLeave="ArticuloBotonPrincipal_MouseLeave"
                    MouseLeftButtonUp="ToggleGestInventario_Click">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  Icono izquierdo  -->
                        <Border
                            Grid.Column="0"
                            Width="20"
                            Height="20"
                            VerticalAlignment="Center"
                            Background="Transparent">
                            <Path
                                Width="20"
                                Height="20"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Data="M331.38-558.77 480-805.54l148.62 246.77H331.38Zm364.62 432q-57.69 0-97.46-39.77-39.77-39.77-39.77-97.46 0-57.69 39.77-97.46 39.77-39.77 97.46-39.77 57.69 0 97.46 39.77 39.77 39.77 39.77 97.46 0 57.69-39.77 97.46-39.77 39.77-97.46 39.77Zm-521.23-24v-226.46h226.46v226.46H174.77Zm520.98-8q44.1 0 74.79-30.44 30.69-30.45 30.69-74.54 0-44.1-30.44-74.79-30.45-30.69-74.54-30.69-44.1 0-74.79 30.44-30.69 30.45-30.69 74.54 0 44.1 30.44 74.79 30.45 30.69 74.54 30.69Zm-488.98-24h162.46v-162.46H206.77v162.46Zm180.31-408h185.84L480-741.92l-92.92 151.15Zm92.92 0ZM369.23-345.23ZM691-269Z"
                                Fill="White"
                                Stretch="Uniform" />
                        </Border>

                        <!--  Texto  -->
                        <TextBlock
                            Grid.Column="1"
                            Margin="7,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="12"
                            FontWeight="DemiBold"
                            Foreground="White"
                            Text="Gestión de inventario" />

                        <!--  Icono derecho  -->
                        <Border
                            Grid.Column="2"
                            Width="22"
                            Height="22"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Background="Transparent">
                            <Image
                                x:Name="ArticuloIconoFlecha"
                                Width="22"
                                Height="22"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Source="pack://application:,,,/SisGestorEmpenio;component/resources/chevron_right_22.png">
                                <Image.RenderTransform>
                                    <RotateTransform x:Name="ArticuloFlechaTransform" Angle="90" CenterX="11" CenterY="11" />
                                </Image.RenderTransform>
                            </Image>
                        </Border>
                    </Grid>
                </Border>

                <!--  Contenedor oculto de sub-opciones  -->
                <StackPanel x:Name="OpcionesArticulos" Visibility="Collapsed">
                    <!--  Sub-opciones con mismo estilo  -->


                    <!--  REGISTRAR ARTICULO  -->
                    <Border
                        x:Name="BtnRegistrarArticulo"
                        MouseLeftButtonUp="GoToRegistrarArticulo"
                        Style="{StaticResource SubMenuButtonStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border
                                Grid.Column="0"
                                Width="24"
                                Height="24"
                                VerticalAlignment="Center"
                                Background="Transparent" />
                            <TextBlock
                                x:Name="TxtRegistrarArticulo"
                                Grid.Column="1"
                                Style="{StaticResource SubMenuTextStyle}"
                                Text="Registra un artículo" />
                        </Grid>
                    </Border>

                    <!--  MODIFICAR ARTICULO  -->
                    <Border MouseDown="GoToModificarArticulo" Style="{StaticResource SubMenuButtonStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border
                                Grid.Column="0"
                                Width="24"
                                Height="24"
                                VerticalAlignment="Center"
                                Background="Transparent" />
                            <TextBlock
                                x:Name="TxtModificarArticulo"
                                Grid.Column="1"
                                Style="{StaticResource SubMenuTextStyle}"
                                Text="Modifica un articulo" />
                        </Grid>
                    </Border>

                    <!--  CONSULTAR ARTICULO  -->
                    <Border MouseDown="GoToConsultarArticulo" Style="{StaticResource SubMenuButtonStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border
                                Grid.Column="0"
                                Width="24"
                                Height="24"
                                VerticalAlignment="Center"
                                Background="Transparent" />
                            <TextBlock
                                x:Name="TxtConsultarArticulo"
                                Grid.Column="1"
                                Style="{StaticResource SubMenuTextStyle}"
                                Text="Consulta articulos" />
                        </Grid>
                    </Border>

                </StackPanel>
            </StackPanel>
        </StackPanel>



        <!--  Zona de contenido  -->
        <Grid Grid.Column="1" Background="#3A7575">
            <!--  Contenedor principal  -->
            <Border
                Margin="0"
                Padding="69,31,69,31"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="White"
                CornerRadius="0,0,0,20">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition x:Name="HeaderRow" Height="107" />
                        <!--  Encabezado  -->
                        <RowDefinition Height="*" />
                        <!--  Contenido dinámico  -->
                    </Grid.RowDefinitions>

                    <!--  Encabezado  -->
                    <StackPanel x:Name="HeaderPanel" Grid.Row="0">
                        <!--  Espaciado superior  -->
                        <Border Height="12" Background="Transparent">
                            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                <Ellipse
                                    Width="10"
                                    Height="10"
                                    VerticalAlignment="Center"
                                    Fill="#D9D9D9" />
                                <TextBlock
                                    Margin="9,0,0,0"
                                    VerticalAlignment="Top"
                                    FontFamily="Franklin Gothic Heavy"
                                    FontSize="6"
                                    FontWeight="ExtraBold"
                                    Foreground="#095858"
                                    Text="__________________" />
                            </StackPanel>
                        </Border>

                        <!--  Título  -->
                        <Border
                            Height="29"
                            Margin="0,28,0,0"
                            Background="Transparent">
                            <TextBlock
                                x:Name="TxtTitulo"
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Black"
                                FontSize="24"
                                FontWeight="Bold"
                                Foreground="#095858"
                                Text="Bienvenido administrador a J-LHYS" />
                        </Border>

                        <!--  Subtítulo  -->
                        <Border
                            Height="23"
                            Margin="0,8,0,0"
                            Background="Transparent">
                            <TextBlock
                                x:Name="TxtSubtitulo"
                                VerticalAlignment="Center"
                                FontSize="20"
                                FontWeight="Bold"
                                Foreground="#095858"
                                Text="Sistema gestor de la casa de empeño" />
                        </Border>
                    </StackPanel>

                    <!--  Contenido dinámico  -->
                    <ContentControl
                        x:Name="MainContent"
                        Grid.Row="1"
                        Margin="0,10,0,0" />
                </Grid>
            </Border>
        </Grid>

    </Grid>
</Window>
