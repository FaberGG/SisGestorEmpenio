<Window
    x:Class="SisGestorEmpenio.vistas.BuscarArticuloPorId"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Buscar Artículo"
    Width="530"
    Height="236"
    Background="White"
    WindowStartupLocation="CenterScreen"
    WindowStyle="SingleBorderWindow">
    <Border Padding="20" Background="White">
        <StackPanel VerticalAlignment="Center">
            <TextBlock
                Margin="0,0,0,20"
                FontSize="16"
                FontWeight="Bold"
                Text="Ingrese el ID del artículo"
                TextAlignment="Center" />

            <!--  Contenedor: ID Articulo  -->
            <StackPanel Margin="0,0,0,10">
                <TextBlock
                    x:Name="lblIdArticulo"
                    Margin="7,0,0,2"
                    HorizontalAlignment="Left"><Run Text="Identificador del artículo" /><Run Language="es-es" Text=" *" /></TextBlock>
                <Border
                    MinHeight="28"
                    Background="#C2DBDB"
                    CornerRadius="8">
                    <TextBox
                        x:Name="txtIdArticulo"
                        Padding="6,0"
                        VerticalContentAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0" />
                </Border>
            </StackPanel>

            <!--  Botón Buscar  -->
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button
                    Width="126"
                    Height="30"
                    Margin="0,10,0,0"
                    Padding="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="#3A7575"
                    BorderThickness="0"
                    Click="Buscar_Click"
                    Content="Buscar"
                    Cursor="Hand"
                    FontSize="15"
                    FontWeight="SemiBold"
                    Foreground="White">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="13" />
                        </Style>
                    </Button.Resources>
                </Button>

            </StackPanel>
        </StackPanel>
    </Border>
</Window>
