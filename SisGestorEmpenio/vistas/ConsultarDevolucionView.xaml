<UserControl x:Class="SisGestorEmpenio.vistas.ConsultarDevolucionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:SisGestorEmpenio.vistas"
             mc:Ignorable="d">

    <UserControl.Resources>
        <!-- Estilo para botón de página activa -->
        <Style x:Key="PaginationButtonActiveStyle" TargetType="Button">
            <Setter Property="Background" Value="#3A7575"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="#3A7575"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para botón de página normal -->
        <Style x:Key="PaginationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#3A7575"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F7F9F9" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Encabezado -->
            <RowDefinition Height="Auto"/>
            <!-- Filtros -->
            <RowDefinition Height="*"/>
            <!-- Tabla -->
            <RowDefinition Height="Auto"/>
            <!-- Paginación -->
        </Grid.RowDefinitions>

        <!-- FILTROS -->
        <Border Grid.Row="1" CornerRadius="10" BorderBrush="#CCC" BorderThickness="1" Padding="15" Background="White">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">

                <!-- TÍTULO IZQUIERDA -->
                <TextBlock Text="Consultar Devolución"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="#0D5C5C"
                   VerticalAlignment="Center"
                   Margin="0,0,100,10" />

                <!-- ComboBox Rango de Fechas -->
                <ComboBox x:Name="cmbRangoFechas"
          Width="200" Height="35"
          SelectionChanged="CmbRangoFechas_SelectionChanged"
          Padding="10,0"
          FontWeight="SemiBold"
          Background="#3A7575"
          Foreground="White"
          BorderBrush="#3A7575"
          HorizontalContentAlignment="Center"
          Margin="0,0,10,0">

                    <ComboBox.Resources>
                        <!-- Estilo para redondear solo las esquinas -->
                        <Style x:Key="RoundedComboBoxStyle" TargetType="ComboBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ComboBox">
                                        <Grid>
                                            <Border Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="9"
                                    Width="{TemplateBinding Width}"
                                    Height="{TemplateBinding Height}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="25"/>
                                                    </Grid.ColumnDefinitions>

                                                    <ContentPresenter Name="ContentSite"
                                                      Grid.Column="0"
                                                      IsHitTestVisible="False"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      Margin="{TemplateBinding Padding}"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>

                                                    <ToggleButton Name="ToggleButton"
                                                  Grid.Column="1"
                                                  Focusable="false"
                                                  IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                  ClickMode="Press"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  Margin="0,0,5,0">
                                                        <ToggleButton.Template>
                                                            <ControlTemplate TargetType="ToggleButton">
                                                                <Border Background="Transparent">
                                                                    <Path Fill="White"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          Data="M 0 0 L 3 3 L 6 0 Z"
                                                          Stroke="White"
                                                          StrokeThickness="0.5"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </ToggleButton.Template>
                                                    </ToggleButton>
                                                </Grid>
                                            </Border>

                                            <Popup Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                                <Grid Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                                    <Border Background="#3A7575"
                                            BorderThickness="1"
                                            BorderBrush="#3A7575"
                                            CornerRadius="9">
                                                        <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                                            <StackPanel IsItemsHost="True"/>
                                                        </ScrollViewer>
                                                    </Border>
                                                </Grid>
                                            </Popup>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ComboBox.Resources>

                    <ComboBox.Style>
                        <StaticResource ResourceKey="RoundedComboBoxStyle"/>
                    </ComboBox.Style>

                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Background" Value="#3A7575"/>
                            <Setter Property="Padding" Value="10,5"/>
                            <Style.Triggers>
                                <Trigger Property="IsHighlighted" Value="True">
                                    <Setter Property="Background" Value="#4A8585"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.ItemContainerStyle>

                    <ComboBoxItem Content="Rango de tiempo" IsSelected="True"/>
                    <ComboBoxItem Content="Hoy"/>
                    <ComboBoxItem Content="Últimos 5 días"/>
                    <ComboBoxItem Content="Últimos 10 días"/>
                    <ComboBoxItem Content="Últimos 30 días"/>
                </ComboBox>
                
                <!-- Barra de búsqueda para ID Artículo -->
                <Border Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="5"
                        Height="35"
                        Width="200"
                        Padding="6,0"
                        Margin="0,0,8,0">
                    <Grid VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="19"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Icono de búsqueda -->
                        <Border Grid.Column="0" Width="19" Height="19">
                            <Path Data="M784-120 532-372q-30 24-69 38t-83 14q-109 0-184.5-75.5T120-580q0-109 75.5-184.5T380-840q109 0 184.5 75.5T640-580q0 44-14 83t-38 69l252 252-56 56ZM380-400q75 0 127.5-52.5T560-580q0-75-52.5-127.5T380-760q-75 0-127.5 52.5T200-580q0 75 52.5 127.5T380-400Z"
                                  Fill="#7DA4A4"
                                  Width="19"
                                  Height="19"
                                  Stretch="Uniform"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>

                        <!-- TextBox REAL para escribir -->
                        <TextBox Grid.Column="1"
                                 x:Name="txtIdArticulo"
                                 TextChanged="TxtIdArticulo_TextChanged"
                                 GotFocus="TxtIdArticulo_GotFocus"
                                 LostFocus="TxtIdArticulo_LostFocus"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 FontSize="12"
                                 VerticalAlignment="Center"
                                 Padding="0"
                                 Margin="5,0,0,0"/>

                        <!-- Placeholder que se oculta cuando hay texto -->
                        <TextBlock Grid.Column="1"
                                   Text="Id Articulo..."
                                   Foreground="#7DA4A4"
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   Margin="5,0,0,0"
                                   IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=txtIdArticulo}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>

                <!-- Barra de búsqueda para Cédula -->
                <Border Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="5"
                        Height="35"
                        Width="200"
                        Padding="6,0"
                        Margin="0,0,8,0">
                    <Grid VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="19"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Icono de búsqueda -->
                        <Border Grid.Column="0" Width="19" Height="19">
                            <Path Data="M784-120 532-372q-30 24-69 38t-83 14q-109 0-184.5-75.5T120-580q0-109 75.5-184.5T380-840q109 0 184.5 75.5T640-580q0 44-14 83t-38 69l252 252-56 56ZM380-400q75 0 127.5-52.5T560-580q0-75-52.5-127.5T380-760q-75 0-127.5 52.5T200-580q0 75 52.5 127.5T380-400Z"
                                  Fill="#7DA4A4"
                                  Width="19"
                                  Height="19"
                                  Stretch="Uniform"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>

                        <!-- TextBox REAL para escribir -->
                        <TextBox Grid.Column="1"
                                 x:Name="txtCedula"
                                 TextChanged="TxtCedula_TextChanged"
                                 GotFocus="TxtCedula_GotFocus"
                                 LostFocus="TxtCedula_LostFocus"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 FontSize="12"
                                 VerticalAlignment="Center"
                                 Padding="0"
                                 Margin="5,0,0,0"/>

                        <!-- Placeholder que se oculta cuando hay texto -->
                        <TextBlock Grid.Column="1"
                                   Text="Identificación..."
                                   Foreground="#7DA4A4"
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   Margin="5,0,0,0"
                                   IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=txtCedula}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>
            </StackPanel>
        </Border>

        <!-- TABLA DE DATOS -->
        <Border Grid.Row="2" Background="White" CornerRadius="10" BorderBrush="#CCC" BorderThickness="1" Padding="10" Margin="0,15,0,15">
            <DataGrid x:Name="dgDevoluciones"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              HeadersVisibility="Column"
              RowHeaderWidth="0"
              GridLinesVisibility="None"
              CanUserResizeRows="False"
              CanUserResizeColumns="False"
              FontSize="13"
              ColumnHeaderHeight="50"
              BorderThickness="0"
              Background="White"
              Foreground="#3A7575">

                <!-- Estilo para encabezado -->
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Foreground" Value="#3A7575"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="BorderBrush" Value="#CCC"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <!-- Estilo para celdas -->
                <DataGrid.Resources>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Foreground" Value="#3A7575"/>
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                    </Style>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F8F9FA"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id de cliente" Binding="{Binding Cedula}" Width="*" MinWidth="180">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Id del artículo" Binding="{Binding IdArticulo}" Width="*" MinWidth="180">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Número de convenio" Binding="{Binding IdConvenio}" Width="*" MinWidth="200">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Fecha de devolución" Binding="{Binding FechaDevolucion}" Width="*" MinWidth="180">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn Header="Detalles" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="..."
                        Click="MenuVerDetallesDevolucion_Click"
                        Tag="{Binding Devolucion}"
                        Background="White"
                        Foreground="#3A7575"
                        Padding="5,5"
                        BorderThickness="0"
                        Cursor="Hand"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- INFO Y PAGINACIÓN -->
        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Botón Anterior -->
            <Button x:Name="btnAnterior"
            Grid.Column="0"
            Content="◁ Anterior"
            Click="BtnAnterior_Click"
            Background="White"
            Foreground="#3A7575"
            BorderBrush="#CCC"
            BorderThickness="1"
            Padding="10,5"
            Margin="5"/>

            <!-- Panel central con información y páginas -->
            <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Información de registros -->
                <TextBlock x:Name="txtInfoRegistros"  
                   Text="Mostrando 1-10 de 100 registros"
                   HorizontalAlignment="Center"
                   Foreground="#6C757D"
                   FontSize="14"
                   Margin="0,0,0,10"/>

                <!-- Panel de páginas -->
                <StackPanel x:Name="pnlPaginas"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Botón Siguiente -->
            <Button x:Name="btnSiguiente"
            Grid.Column="2"
            Content="Siguiente ▷"
            Click="BtnSiguiente_Click"
            Background="White"
            Foreground="#3A7575"
            BorderBrush="#CCC"
            BorderThickness="1"
            Padding="10,5"
            Margin="5"/>
        </Grid>

    </Grid>
</UserControl>