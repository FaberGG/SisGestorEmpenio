<UserControl
    x:Class="SisGestorEmpenio.vistas.ConsultarDevolucionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SisGestorEmpenio.vistas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!--  Estilo para botón de página activa  -->
        <Style x:Key="PaginationButtonActiveStyle" TargetType="Button">
            <Setter Property="Background" Value="#3A7575" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="BorderBrush" Value="#3A7575" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Estilo para botón de página normal  -->
        <Style x:Key="PaginationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="#3A7575" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="BorderBrush" Value="#CCC" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0F0F0" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20" Background="#F7F9F9">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  Encabezado  -->
            <RowDefinition Height="Auto" />
            <!--  Filtros  -->
            <RowDefinition Height="*" />
            <!--  Tabla  -->
            <RowDefinition Height="Auto" />
            <!--  Paginación  -->
        </Grid.RowDefinitions>

        <!--  FILTROS  -->
        <Border
            Grid.Row="1"
            Padding="15"
            Background="White"
            BorderBrush="#CCC"
            BorderThickness="1"
            CornerRadius="10">
            <StackPanel
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Orientation="Horizontal">

                <!--  TÍTULO IZQUIERDA  -->
                <TextBlock
                    Margin="0,0,100,10"
                    VerticalAlignment="Center"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="#0D5C5C"
                    Text="Consultar Devolución" />

                <!--  ComboBox Rango de Fechas  -->
                <!--  ComboBox Rango de Fechas - Solución 2: Con Button invisible superpuesto  -->
                <Grid>
                    <ComboBox
                        x:Name="cmbRangoFechas"
                        Width="200"
                        Height="35"
                        Margin="0,0,10,0"
                        Padding="10,0"
                        HorizontalContentAlignment="Center"
                        Background="#3A7575"
                        BorderBrush="#3A7575"
                        FontWeight="SemiBold"
                        Foreground="White"
                        SelectionChanged="CmbRangoFechas_SelectionChanged">

                        <ComboBox.Resources>
                            <!--  Estilo para redondear solo las esquinas  -->
                            <Style x:Key="RoundedComboBoxStyle" TargetType="ComboBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ComboBox">
                                            <Grid>
                                                <Border
                                                    Name="Border"
                                                    Width="{TemplateBinding Width}"
                                                    Height="{TemplateBinding Height}"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="1"
                                                    CornerRadius="9">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="25" />
                                                        </Grid.ColumnDefinitions>

                                                        <ContentPresenter
                                                            Name="ContentSite"
                                                            Grid.Column="0"
                                                            Margin="{TemplateBinding Padding}"
                                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                            VerticalAlignment="Center"
                                                            Content="{TemplateBinding SelectionBoxItem}"
                                                            IsHitTestVisible="False" />

                                                        <Path
                                                            Grid.Column="1"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Data="M 0 0 L 3 3 L 6 0 Z"
                                                            Fill="White"
                                                            IsHitTestVisible="False"
                                                            Stroke="White"
                                                            StrokeThickness="0.5" />
                                                    </Grid>
                                                </Border>

                                                <Popup
                                                    Name="Popup"
                                                    AllowsTransparency="True"
                                                    Focusable="False"
                                                    IsOpen="{TemplateBinding IsDropDownOpen}"
                                                    Placement="Bottom"
                                                    PopupAnimation="Slide">
                                                    <Grid
                                                        Name="DropDown"
                                                        MinWidth="{TemplateBinding ActualWidth}"
                                                        MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                                        SnapsToDevicePixels="True">
                                                        <Border
                                                            Background="#3A7575"
                                                            BorderBrush="#3A7575"
                                                            BorderThickness="1"
                                                            CornerRadius="9">
                                                            <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                                                <StackPanel IsItemsHost="True" />
                                                            </ScrollViewer>
                                                        </Border>
                                                    </Grid>
                                                </Popup>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ComboBox.Resources>

                        <ComboBox.Style>
                            <StaticResource ResourceKey="RoundedComboBoxStyle" />
                        </ComboBox.Style>

                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="Background" Value="#3A7575" />
                                <Setter Property="Padding" Value="10,5" />
                                <Style.Triggers>
                                    <Trigger Property="IsHighlighted" Value="True">
                                        <Setter Property="Background" Value="#4A8585" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.ItemContainerStyle>

                        <ComboBoxItem Content="Rango de tiempo" IsSelected="True" />
                        <ComboBoxItem Content="Hoy" />
                        <ComboBoxItem Content="Últimos 5 días" />
                        <ComboBoxItem Content="Últimos 10 días" />
                        <ComboBoxItem Content="Últimos 30 días" />
                    </ComboBox>

                    <!--  Button invisible que cubre toda la superficie del ComboBox  -->
                    <Button
                        Width="200"
                        Height="35"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="FullAreaButton_Click"
                        Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="Transparent" CornerRadius="9" />
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <!--  Barra de búsqueda para ID Artículo  -->
                <Border
                    Width="200"
                    Height="35"
                    Margin="0,0,8,0"
                    Padding="6,0"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="5">
                    <Grid VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="19" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Icono de búsqueda  -->
                        <Border
                            Grid.Column="0"
                            Width="19"
                            Height="19">
                            <Path
                                Width="19"
                                Height="19"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Data="M784-120 532-372q-30 24-69 38t-83 14q-109 0-184.5-75.5T120-580q0-109 75.5-184.5T380-840q109 0 184.5 75.5T640-580q0 44-14 83t-38 69l252 252-56 56ZM380-400q75 0 127.5-52.5T560-580q0-75-52.5-127.5T380-760q-75 0-127.5 52.5T200-580q0 75 52.5 127.5T380-400Z"
                                Fill="#7DA4A4"
                                Stretch="Uniform" />
                        </Border>

                        <!--  TextBox REAL para escribir  -->
                        <TextBox
                            x:Name="txtIdArticulo"
                            Grid.Column="1"
                            Margin="5,0,0,0"
                            Padding="0"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="12"
                            GotFocus="TxtIdArticulo_GotFocus"
                            LostFocus="TxtIdArticulo_LostFocus"
                            TextChanged="TxtIdArticulo_TextChanged" />

                        <!--  Placeholder que se oculta cuando hay texto  -->
                        <TextBlock
                            Grid.Column="1"
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="#7DA4A4"
                            IsHitTestVisible="False"
                            Text="Id Articulo...">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=txtIdArticulo}" Value="">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>

                <!--  Barra de búsqueda para Cédula  -->
                <Border
                    Width="200"
                    Height="35"
                    Margin="0,0,8,0"
                    Padding="6,0"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="5">
                    <Grid VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="19" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Icono de búsqueda  -->
                        <Border
                            Grid.Column="0"
                            Width="19"
                            Height="19">
                            <Path
                                Width="19"
                                Height="19"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Data="M784-120 532-372q-30 24-69 38t-83 14q-109 0-184.5-75.5T120-580q0-109 75.5-184.5T380-840q109 0 184.5 75.5T640-580q0 44-14 83t-38 69l252 252-56 56ZM380-400q75 0 127.5-52.5T560-580q0-75-52.5-127.5T380-760q-75 0-127.5 52.5T200-580q0 75 52.5 127.5T380-400Z"
                                Fill="#7DA4A4"
                                Stretch="Uniform" />
                        </Border>

                        <!--  TextBox REAL para escribir  -->
                        <TextBox
                            x:Name="txtCedula"
                            Grid.Column="1"
                            Margin="5,0,0,0"
                            Padding="0"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="12"
                            GotFocus="TxtCedula_GotFocus"
                            LostFocus="TxtCedula_LostFocus"
                            TextChanged="TxtCedula_TextChanged" />

                        <!--  Placeholder que se oculta cuando hay texto  -->
                        <TextBlock
                            Grid.Column="1"
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="#7DA4A4"
                            IsHitTestVisible="False"
                            Text="Identificación...">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=txtCedula}" Value="">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>
            </StackPanel>
        </Border>

        <!--  TABLA DE DATOS  -->
        <Border
            Grid.Row="2"
            Margin="0,15,0,15"
            Padding="10"
            Background="White"
            BorderBrush="#CCC"
            BorderThickness="1"
            CornerRadius="10">
            <DataGrid
                x:Name="dgDevoluciones"
                AutoGenerateColumns="False"
                Background="White"
                BorderThickness="0"
                CanUserResizeColumns="False"
                CanUserResizeRows="False"
                ColumnHeaderHeight="50"
                FontSize="13"
                Foreground="#3A7575"
                GridLinesVisibility="None"
                HeadersVisibility="Column"
                IsReadOnly="True"
                RowHeaderWidth="0">

                <!--  Estilo para encabezado  -->
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="White" />
                        <Setter Property="Foreground" Value="#3A7575" />
                        <Setter Property="FontWeight" Value="SemiBold" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="BorderBrush" Value="#CCC" />
                        <Setter Property="BorderThickness" Value="0,0,0,1" />
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <!--  Estilo para celdas  -->
                <DataGrid.Resources>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Foreground" Value="#3A7575" />
                        <Setter Property="Background" Value="White" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="HorizontalAlignment" Value="Center" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                    </Style>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="White" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F8F9FA" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        MinWidth="180"
                        Binding="{Binding Cedula}"
                        Header="Id de cliente">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="*"
                        MinWidth="180"
                        Binding="{Binding IdArticulo}"
                        Header="Id del artículo">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="*"
                        MinWidth="200"
                        Binding="{Binding IdConvenio}"
                        Header="Número de convenio">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="*"
                        MinWidth="180"
                        Binding="{Binding FechaDevolucion}"
                        Header="Fecha de devolución">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn Width="100" Header="Detalles">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button
                                    Padding="5,5"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Background="White"
                                    BorderThickness="0"
                                    Click="MenuVerDetallesDevolucion_Click"
                                    Content="..."
                                    Cursor="Hand"
                                    Foreground="#3A7575"
                                    Tag="{Binding Devolucion}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!--  INFO Y PAGINACIÓN  -->
        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Botón Anterior  -->
            <Button
                x:Name="btnAnterior"
                Grid.Column="0"
                Margin="5"
                Padding="10,5"
                Background="White"
                BorderBrush="#CCC"
                BorderThickness="1"
                Click="BtnAnterior_Click"
                Content="◁ Anterior"
                Foreground="#3A7575" />

            <!--  Panel central con información y páginas  -->
            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <!--  Información de registros  -->
                <TextBlock
                    x:Name="txtInfoRegistros"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    FontSize="14"
                    Foreground="#6C757D"
                    Text="Mostrando 1-10 de 100 registros" />

                <!--  Panel de páginas  -->
                <StackPanel
                    x:Name="pnlPaginas"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal" />
            </StackPanel>

            <!--  Botón Siguiente  -->
            <Button
                x:Name="btnSiguiente"
                Grid.Column="2"
                Margin="5"
                Padding="10,5"
                Background="White"
                BorderBrush="#CCC"
                BorderThickness="1"
                Click="BtnSiguiente_Click"
                Content="Siguiente ▷"
                Foreground="#3A7575" />
        </Grid>

    </Grid>
</UserControl>